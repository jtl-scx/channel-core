{
    "name": "jtl-scx/channel-core",
    "type": "library",
    "description": "SCX Channel Library",
    "license": "MIT",
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.2",
        "jtl-scx/channel-api-client": "^0.37.0",
        "jtl/nachricht": "^0.13.0",
        "monolog/monolog": "^2.0",
        "myclabs/php-enum": "^1.7",
        "php-amqplib/php-amqplib": "^2.10",
        "psr/log": "^1.1",
        "symfony/config": "^5.1",
        "symfony/console": "^5.1",
        "symfony/dependency-injection": "^5.1",
        "symfony/proxy-manager-bridge": "^5.1",
        "symfony/translation": "^5.1",
        "symfony/yaml": "^5.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.15",
        "mongodb/mongodb": "^1.8",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": "^9.0",
        "symfony/dotenv": "^5.0",
        "twig/twig": "^2.0"
    },
    "suggest": {
        "ext-mongodb": "Needed if MongoDbConnection is used",
        "mongodb/mongodb": "Needed if MongoDbConnection is used"
    },
    "autoload": {
        "psr-4": {
            "JTL\\SCX\\Lib\\Channel\\": "src/"
        }
    },
    "scripts": {
        "phpcs": [
            "vendor/bin/php-cs-fixer fix --config=./.php_cs.dist"
        ],
        "phpcs-dry": [
            "vendor/bin/php-cs-fixer fix --config=./.php_cs.dist --dry-run"
        ],
        "phpstan": [
            "vendor/bin/phpstan analyse -c phpstan.neon"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
